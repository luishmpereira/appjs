generator client {
  provider = "prisma-client"
  output   = "../src/lib/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               Int        @id @default(autoincrement())
  email            String     @unique
  name             String
  password         String
  avatar           String?
  roleId           Int
  role             Role       @relation(fields: [roleId], references: [id])
  customers        Contact[]
  createdMovements Movement[] @relation("createdBy")
  updatedMovements Movement[] @relation("updatedBy")
  activities       UserActivity[]
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  users       User[]
  permissions Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  sellerId  Int
  seller    User     @relation(fields: [sellerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id            Int            @id @default(autoincrement())
  name          String
  description   String
  price         Float
  stockQuantity Int
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  movementLines MovementLine[]
}

model Movement {
  id           Int            @id @default(autoincrement())
  lines        MovementLine[]
  movementDate DateTime       @default(now())
  operationId  Int
  operation    Operation      @relation(fields: [operationId], references: [id])
  createdBy    User           @relation(fields: [createdById], references: [id], name: "createdBy")
  createdById  Int
  updatedBy    User           @relation(fields: [updatedById], references: [id], name: "updatedBy")
  updatedById  Int
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model MovementLine {
  id         Int      @id @default(autoincrement())
  movementId Int
  movement   Movement @relation(fields: [movementId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  quantity   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Operation {
  id              Int        @id @default(autoincrement())
  name            String
  operationCode   String
  changeInventory Boolean
  hasFinance      Boolean
  operationType   String
  movements       Movement[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model UserActivity {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
